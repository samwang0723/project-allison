{
  "include": [
    "src",
    "core",
    "api"
  ],
  
  "exclude": [
    "**/node_modules",
    "**/__pycache__",
    "src/experimental",
    "src/typestubs"
  ],

  "ignore": [
    "src/oldstuff"
  ],

  "defineConstant": {
    "DEBUG": true
  },

  "stubPath": "src/stubs",

  "reportMissingImports": true,
  "reportMissingTypeStubs": false,
  "reportOptionalSubscript": false,

  "executionEnvironments": [
    {
      "root": "src"
    }
  ]
}
